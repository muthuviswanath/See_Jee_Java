package generics;

import java.util.ArrayList;
import java.util.Collection;
import java.util.Iterator;
import java.util.ListIterator;

public class ArrayListDemo {
	// void add(int index, E element)
	// boolean add(Element e)
	// boolean addAll(Collection <? extends E> c)
	// boolean addAll(int index, Collectio <? extends E> c)
	// E get(int index)
	// int indexOf(Object o)
	// E remove(int index)
	// boolean remove(Object o)
	public static void main(String[] args) {
		ArrayList<Integer> al = new ArrayList<Integer>();
		al.add(10);
		al.add(10);
		al.add(20);
		al.add(2);
		System.out.println("Before Removal");
		System.out.println(al);
		al.remove(Integer.valueOf(2));
		System.out.println("After Removal");
		System.out.println(al);
		for(int i=0; i<al.size(); i++) {
			System.out.println(al.get(i));
		}
		
		for(int i=al.size()-1; i>=0; i--) {
			System.out.println(al.get(i));
			//this prints the arraylist elements in reverse order
		}
		
		//enhanced for loop
		for(int a:al) {
			System.out.println(a);
		}
		
		Iterator<Integer> literator = al.iterator<Integer>();
		while(literator.hasNext()) {
			System.out.println(literator.next());
		}
		
		System.out.println(al);
		// CREATE - done
		// READ - done
		// DELETE - done
		// UPDATE - yet to be discussed
		// make a note of it so that we can discuss the Update functionality and work
		// on a scenario.
	}
}









